extends ../layouts/app

block content
  form(action="/dashboard/products/update", method="POST")
    fieldset
      legend Редактирование продукта
      p.form-group
        label(for="product-name") Название:
        input(type="text", name="name", placeholder="Название продукта", id="product-name", value="#{!!product.name.length ? product.name : ''}").form-control
      p.form-group
        label(for="product-slug") Псевдоним ( анг ):
        input(type="text", name="slug", placeholder="Название английский", id="product-slug", value="#{!!product.slug.length ? product.slug : ''}").form-control
      p.form-group
        label(for="manufacture-date") Дата изготовления:
        input(type="text", name="manufactureDate", placeholder="00.00.00", id="manufacture-date", value="#{moment(product.manufactureDate).format('L').replace(/\//g, '.')}").form-control.makdoors-datepicker
      p.form-group
        label(for="product-count") Кол-во:
        input(type="text", name="count", placeholder="00.00.00", id="product-count", value="#{!!product.count ? product.count : 0}").form-control
      p.form-group
        input(type="hidden", name="id", value="#{product.id}")
        input(type="hidden", name="_csrf", value="#{csrf}")
        input(type="submit", name="submit", value="Сохранить").btn.btn-default.btn-primary